<div class="form-container">
        <h2>Cadastrar Jogo</h2>
        <form action="/add" method="post">
            <div class="form-group">
                <label for="name">Nome:</label>
                <input type="text" id="name" name="name" placeholder="Digite o nome do jogo" required>
            </div>
            <div class="form-group">
                <label for="price">Preço:</label>
                <input type="number" name="price" step="0.01" placeholder="Digite o valor do jogo" required>
            </div>
            <div class="form-group">
                <label for="genre">Gênero:</label>
                <input type="text" name="genre" placeholder="Digite o gênero do jogo" required>
            </div>
            <div class="form-group">
                <label for="year">Ano de lançamento:</label>
                <input type="number" name="year" placeholder="Digite o ano do jogo" required>
            </div>
            <div class="form-group">
                <label for="image">URL Imagem:</label>
                <input type="text" name="image" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar">
            </div>
        </form>
    </div>