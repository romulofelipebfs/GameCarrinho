<div class="form-container">
        <h2>Atualizar Jogo</h2>
        <form action="/update" method="post">
            <input type="hidden" name="id" value="{{game.id}}">
            <div class="form-group">
                <label for="name">Nome:</label>
                <input type="text" name="name" placeholder="Digite o nome do jogo" value="{{game.name}}">
            </div>
            <div class="form-group">
                <label for="price">Preço:</label>
                <input type="number" name="price" step="0.01" placeholder="Digite o valor do jogo" value="{{game.price}}">
            </div>
            <div class="form-group">
                <label for="genre">Gênero:</label>
                <input type="text" name="genre" placeholder="Digite o gênero do jogo" value="{{game.genre}}">
            </div>
            <div class="form-group">
                <label for="year">Ano de lançamento:</label>
                <input type="number" name="year" placeholder="Digite o ano do jogo" value="{{game.year}}">
            </div>
            <div class="form-group">
                <label for="image">URL Imagem:</label>
                <input type="text" name="image" value="{{game.image}}">
            </div>
            <div class="form-group">
                <input type="submit" value="Editar">
            </div>
        </form>
    </div>